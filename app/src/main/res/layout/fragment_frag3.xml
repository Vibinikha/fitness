<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Frag3"
    android:background="#F1E89E">
    <TextView
    android:id="@+id/textViewNutrition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nutrition Tips"
    android:textSize="24sp"
    android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewTip1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Eat lean protein with every meal" />
    <ImageView
        android:id="@+id/imageViewTip1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_1" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewTip2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Include healthy fats like nuts and avocado" />
    <ImageView
        android:id="@+id/imageViewTip2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_2" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewTip3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Drink plenty of water throughout the day" />
    <ImageView
        android:id="@+id/imageViewTip3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_3" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewTip4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Eat fiber-rich foods like fruits and vegetables" />
    <ImageView
        android:id="@+id/imageViewTip4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_4" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewTip5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Limit processed foods and added sugars" />
    <ImageView
        android:id="@+id/imageViewTip5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_5" />
</LinearLayout>
<!-- Add more tips here -->
</LinearLayout>
